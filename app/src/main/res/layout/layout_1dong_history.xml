<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical"
    android:background="@drawable/bg_cn_skwhite"
    android:padding="7dp"
    android:layout_margin="7dp"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:src="@drawable/cinema"
            />
        <TextView
            android:id="@+id/tvtenphimhistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên Phim"
            android:textSize="22dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
    </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:src="@drawable/location"
        />
    <TextView
        android:id="@+id/tvtenraphistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên rạp"
        android:textColor="@color/black"
        android:textSize="18dp"
        />

</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:src="@drawable/baseline_calendar_month_24"
            />
        <TextView
            android:id="@+id/tvngaychieuhistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày xem"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:layout_marginStart="3dp"
            />
    </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="25dp"
        android:layout_height="20dp"
        android:src="@drawable/baseline_access_time_filled_24"
        />
    <TextView
        android:id="@+id/tvgioxemhistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giờ xem"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:layout_marginStart="3dp"
        />
</LinearLayout>

</LinearLayout>