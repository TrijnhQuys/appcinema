<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity_ChonThucAn"
    android:orientation="vertical"
    android:background="#E3E3E3"
    >
    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#FF6161">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CHỌN THỨC ĂN "
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />
    </com.google.android.material.appbar.MaterialToolbar>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:id="@+id/rvChonthucan"
        android:layout_margin="8dp"
        android:background="@drawable/bg_cn_slwhite"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_cn_slwhite"
        >
        <TextView
            android:id="@+id/tvTenPhimDatVe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LẬT MẶT 7: MỘT ĐIỀU ƯỚC"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                >
                <TextView
                    android:id="@+id/tvtongtien"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/red"
                    android:textSize="18dp"
                    android:layout_alignParentLeft="true"
                    android:visibility="visible"
                    />
                <TextView
                    android:id="@+id/tvtongtienthucan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/red"
                    android:textSize="18dp"
                    android:layout_alignParentLeft="true"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/tvtongtientatca"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/red"
                    android:textSize="18dp"
                    android:layout_alignParentLeft="true"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/đ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tvtongtien"
                    android:text="đ"
                    android:textColor="@color/red"
                    android:textSize="18dp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvtongghe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="0"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ghế"
                    android:layout_toRightOf="@id/tvtongghe"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:layout_marginStart="5dp"
                    android:id="@+id/ghe1"
                    />
                <TextView
                    android:id="@+id/x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/ghe1"
                    android:text="X"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginStart="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                  android:layout_toRightOf="@id/x"
                    android:id="@+id/tvsoluongcombo"
                    android:layout_marginStart="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Combo Thức Ăn"
                    android:id="@+id/tvTenThucAn"
                    android:layout_toRightOf="@id/tvsoluongcombo"
                    android:textSize="16dp"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/black"
                    />
            </RelativeLayout>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btndat"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_margin="10dp"
            android:background="@drawable/bg_dialog"
            android:text="Đặt Vé"
            android:textAllCaps="false" />

    </LinearLayout>
</LinearLayout>