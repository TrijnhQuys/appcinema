<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/bg_cn_skwhite"
    android:layout_margin="10dp"
    >
<ImageView
    android:id="@+id/imgnews"
    android:layout_width="150dp"
    android:layout_height="120dp"
    android:src="@drawable/ic_launcher_background"
    />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp"
        >
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bóc Tách Trailer Deadpool  Wolverine: Phản Diện Là Em Gái Giáo Sư X?"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvtomtat"
            android:textSize="14dp"
            android:text="Nhân vật cực kì quan trọng – phần còn lại của tựa đề Deadpool 3: Wolverine đã xuất hiện!"
            android:paddingBottom="5dp"

            />
    </LinearLayout>
</LinearLayout>