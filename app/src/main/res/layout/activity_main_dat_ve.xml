<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dialog"
    android:orientation="vertical"
    tools:context=".MainActivity_DatVe">

    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/bg_cn_slblack_skwhite">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTenRap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="Rạp của taoo"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2024-05-10"
                android:textColor="@color/white" />
        </LinearLayout>


    </com.google.android.material.appbar.MaterialToolbar>

    <TextView
        android:id="@+id/tvUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trinhquy"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvIdphim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="trinhquy@123"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvIduser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvTimewahtching"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvGiave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="SCREEN"
        android:textSize="40dp" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="353dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:columnCount="4"
        android:rowCount="5">
        <!-- Các view để đại diện cho các ghế ngồi -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/seat1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/red"
            android:onClick="onSeatSelected"
            android:text="1"
            android:layout_marginTop="1dp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/seat2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/red"
            android:onClick="onSeatSelected"
            android:text="2" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/seat3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/red"
            android:onClick="onSeatSelected"
            android:text="3" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/seat4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/red"
            android:onClick="onSeatSelected"
            android:text="4" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/seat5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/red"
            android:onClick="onSeatSelected"
            android:layout_marginTop="1dp"
            android:text="5" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/seat6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/red"
            android:onClick="onSeatSelected"
            android:text="6" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/seat7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/red"
            android:onClick="onSeatSelected"
            android:text="7" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/seat8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/red"
            android:onClick="onSeatSelected"
            android:text="8" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/seat9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/red"
            android:onClick="onSeatSelected"
            android:layout_marginTop="1dp"
            android:text="9" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/seat10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/red"
            android:onClick="onSeatSelected"
            android:text="10" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/seat11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/red"
            android:onClick="onSeatSelected"
            android:text="11" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/seat12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/red"
            android:onClick="onSeatSelected"
            android:text="12" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/seat13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/red"
            android:onClick="onSeatSelected"
            android:layout_marginTop="1dp"
            android:text="13" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/seat14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/red"
            android:onClick="onSeatSelected"
            android:text="14" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/seat15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/red"
            android:onClick="onSeatSelected"
            android:text="15" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/seat16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/red"
            android:onClick="onSeatSelected"
            android:text="16" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/seat17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/red"
            android:onClick="onSeatSelected"
            android:layout_marginTop="1dp"
            android:text="17" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/seat18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/red"
            android:onClick="onSeatSelected"
            android:text="18" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/seat19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/red"
            android:onClick="onSeatSelected"
            android:text="19" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/seat20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/red"
            android:onClick="onSeatSelected"
            android:text="20" />
    </GridLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:background="@drawable/bg_seats_noselected"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ghế trống"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="2dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:background="@drawable/bg_seats_select"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đang chọn"
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical"
                    android:textSize="16dp"
                    android:layout_marginStart="2dp"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:background="@drawable/bg_seats_selected_server"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đã đặt"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="2dp"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:background="@drawable/bg_cn_slwhite"
        android:orientation="vertical"

        >

        <TextView
            android:id="@+id/tvTenPhimDatVe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="LẬT MẶT 7: MỘT ĐIỀU ƯỚC"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp">

                <TextView
                    android:id="@+id/tvtongtien"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="0"
                    android:textColor="@color/red"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tvtongtien2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="0"
                    android:textColor="@color/red"
                    android:textSize="16dp"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/đ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tvtongtien"
                    android:text="đ"
                    android:textColor="@color/red"
                    android:textSize="16dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvtongghe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_toRightOf="@id/tvtongghe"
                    android:text="Ghế"
                    android:textColor="@color/black"
                    android:textSize="16dp" />
            </RelativeLayout>


        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDatGhe"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_margin="10dp"
            android:background="@drawable/bg_dialog"
            android:text="Đặt Vé"
            android:textAllCaps="false" />

    </LinearLayout>

</LinearLayout>